<footer id="sea-footer-container">
  <div class="sea-footer-row">
    <div class="sea-footer-menu-link">
      {% for item in theme.socialLink %}
        <a
          class="sea-footer-link"
          {% if item.link.startsWith("http") %}
            target="_blank"
          {% endif %}
          href="{{ url_for(item.link) }}"
        >
          {{ item.name }}
        </a>
        <span class="sea-footer-link__dot">·</span>
      {% endfor %}
    </div>
  </div>
  {% set current = moment().year() %}
  {% set since = moment(theme.footer.builtUpTime).year() %}
  <div class="sea-footer-row">
    <div class="sea-footer-copyright">
      <span>©</span>
      {% if current > since %}
        {{ since + '-' + current }}
      {% else %}
        {{ current }}
      {% endif %}
      <span>·</span>
      {{ config.author }}
    </div>
    <span class="split-line">|</span>
    <div class="sea-footer-theme-by">
      {{ _p('footer.theme_source', '<a class="theme" href="https://github.com/hai-zou/hexo-theme-sea" target="_blank">Sea</a>') }}
{% if theme.global.website_counter.enable %}
    <script {% if theme.global.single_page %}data-swup-reload-script{% endif %} src="{% if theme.global.website_counter.url %}{{ theme.global.website_counter.url }}{% else %}https://vercount.one/js{% endif %}"></script>
    <div class="relative text-center lg:absolute lg:right-[20px] lg:top-1/2 lg:-translate-y-1/2 lg:text-right">
        {% if theme.global.website_counter.site_uv %}
            <span id="busuanzi_container_site_uv" class="lg:!block">
                <span class="text-sm">{{ __('本站来过') }}</span>
                <span id="busuanzi_value_site_uv"></span>人
            </span>
        {% endif %}
        {% if theme.global.website_counter.site_pv %}
            <span id="busuanzi_container_site_pv" class="lg:!block">
                <span class="text-sm">{{ __('共访问') }}</span>
                <span id="busuanzi_value_site_pv"></span>次
            </span>
        {% endif %}
    </div>
{% endif %}
    </div>
  </div>
</footer>